{
  "name": "夢想劃詞翻譯—聚合詞典搜索",
  "description": "夢想劃詞翻譯是為閱讀和學習外語而開發的一款翻譯和查詞工具，聚合數十款線上詞典和線上翻譯。",
  "version": "1.6.27",
  "manifest_version": 2,
  "icons": {
    "128": "icon/128.png"
  },
  "background": {
    "scripts": [
      "js/lib/md5.min.js",
      "js/common.js",
      "js/db.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "\u003Call_urls>"
      ],
      "js": [
        "js/common.js",
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "run_at": "document_start"
    },
    {
      "all_frames": true,
      "matches": [
        "\u003Call_urls>"
      ],
      "js": [
        "js/frame.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_title": "夢想劃詞翻譯",
    "default_icon": "icon/128.png"
  },
  "web_accessible_resources": [
    "css/*",
    "html/*"
  ],
  "permissions": [
    "storage",
    "clipboardWrite",
    "clipboardRead",
    "cookies",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "unlimitedStorage",
    "tts",
    "\u003Call_urls>"
  ],
  "homepage_url": "https://github.com/ryanker/dream_translate",
  "commands": {
    "_execute_browser_action": {
      "description": "打開翻譯面板",
      "suggested_key": {
        "default": "Alt+D"
      }
    },
    "openWindow": {
      "description": "打開翻譯窗口",
      "global": true,
      "suggested_key": {
        "default": "Ctrl+Shift+9"
      }
    },
    "toggleScribble": {
      "description": "劃詞翻譯開關",
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      }
    },
    "cropImage": {
      "description": "截圖識別翻譯",
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      }
    },
    "stopPlayAudio": {
      "description": "停止播放聲音"
    },
    "clipboardTrans": {
      "description": "剪貼板內容翻譯"
    }
  }
}


